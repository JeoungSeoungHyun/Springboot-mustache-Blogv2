{{> /layout/header}}

<!-- 컨테이너 시작 -->
<div class="container mt-3">
    <input id="id" type="hidden" value="{{postId}}">
    <!-- 상세정보보기 시작 -->

        <div class="mb-3">
            작성자 : <span id="username"></span>
        </div>
        <div class="mb-3 mt-3">
            <h1 id="title"></h1>
        </div>
        <hr />
        <div id="content" class="mb-3">

    </div>

    <div style="display: none;" id="auth-box">
    <a  href="/s/post/{{postId}}/updateForm" class="btn btn-secondary">수정</a>
    <button id="btn-delete" class="btn btn-danger">삭제</button>

    </div>   
    <!-- 상세정보보기 끝 -->
</div>
<!-- 컨테이너 끝 -->

<script>
    let id = $("#id").val();

    $("#btn-delete").click(()=>{
        deletePost();
    });

    let deletePost = async () => {

        let response = await fetch(`/s/api/post/${id}`,{
            method: "DELETE"
        });

        let responeseParse = await response.json();

        if(responeseParse.code == 1){
            alert("삭제성공");
            location.href="/";
        } else {
            alert("삭제실패");
        }


    };

    let userInfoRender = (data)=>{

        let username = data.post.user.username;
        let title = data.post.title;
        let content =  data.post.content;
        let auth = data.auth;

        $("#username").text(username);
        $("#title").text(title);
        $("#content").html(content); //mustache에서 중괄호 3개인것처럼

        if(auth){
            $("#auth-box").css("display","block");
        }
    };

    let loading = async()=>{

        let response = await fetch(`/api/post/${id}`);

        let responeseParse = await response.json(); // text(), json()

        console.log(responeseParse);

        if(responeseParse.code == 1){
            userInfoRender(responeseParse.data);
            
        } else {
          alert("잘못된 요청입니다.");
            history.back;
        }

    };

    loading();
</script>

